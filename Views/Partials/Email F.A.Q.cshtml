@using System.Threading
@using System.Globalization
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    
}
<div class="question_inner">

    <h4 class="question_title">@Umbraco.GetDictionaryValue("F.A.Q.")</h4>

    <div class="accordion">
        <div class="accordion_item" data-collapse="#accordion_1">
            <div class="accordion_header">
                <div class="accordion_title">@Umbraco.GetDictionaryValue("F.A.Q. Email Question 1")</div>
            </div>
            <div class="accordion_content" id="accordion_1">
                <p>@Umbraco.GetDictionaryValue("F.A.Q. Email Answer 1")</p>
            </div>
        </div>

        <div class="accordion_item" data-collapse="#accordion_2">
            <div class="accordion_header">
                <div class="accordion_title">@Umbraco.GetDictionaryValue("F.A.Q. Email Question 2")</div>
            </div>
            <div class="accordion_content" id="accordion_2">
                <p>@Umbraco.GetDictionaryValue("F.A.Q. Email Answer 2")</p>
            </div>
        </div>

        <div class="accordion_item" data-collapse="#accordion_3">
            <div class="accordion_header">
                <div class="accordion_title">@Umbraco.GetDictionaryValue("F.A.Q. Email Question 3")</div>
            </div>
            <div class="accordion_content" id="accordion_3">
                <p>@Html.Raw(Umbraco.GetDictionaryValue("F.A.Q. Email Answer 3") + Umbraco.GetDictionaryValue("F.A.Q. Email Answer 3.1"))</p>
            </div>
        </div>
        <div class="accordion_item" data-collapse="#accordion_4">
            <div class="accordion_header">
                <div class="accordion_title">@Umbraco.GetDictionaryValue("F.A.Q. Email Question 4")</div>
            </div>
            <div class="accordion_content" id="accordion_4">
                <p>
                    @{
                        var langIso = Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName;
                        langIso = langIso.Equals("en") ? "" : $"/{langIso}";
                    }
                    @Html.Raw(Umbraco.GetDictionaryValue("F.A.Q. Email Answer 4").Replace("@langIso", langIso))</p>
            </div>
        </div>
    </div>

</div>

<script>
    document.querySelector(".emailLink").addEventListener("click", function (e){
        e.stopImmediatePropagation();
    })
</script>