@using System.Text.RegularExpressions
@using System.Threading
@using GoldCasino.ApiModule.Extensions
@using GoldCasino.ApiModule.Models
@using SmartWinners.IPlayerclub365service
@using SmartWinners.Models
@using System.Text.Json
@using SmartWinners.Services
@using Umbraco.Cms.Web.Common
@using GoldCasino.ApiModule.Services
@using GoldCasino.ApiModule.Services.PlayerClub365Api
@inject UmbracoHelper _helper
@inject GameCategoriesService gameCategoriesService
@inject GamesService gamesService
@inject ISupportedLanguagesService supportedLanguagesService
@inject IPlayerClub365ApiService playerClub365ApiService

@{
  var regLanguagePrefix = new Regex(@$"^\/((en|fr|ru|uk|es|he|ar|pt|th|vi|ms|ph|fi|it|pl|zh)\/)?", RegexOptions.Singleline |
  RegexOptions.IgnoreCase);
  var regLanguagePrefixBks = new Regex(@$"^\/((en|fr|ru|uk|es|he|ar|pt|th|vi|ms|ph|fi|it|pl|zh))?", RegexOptions.Singleline |
  RegexOptions.IgnoreCase);

  // Fetch supported languages from API
  var supportedLanguages = await supportedLanguagesService.GetAsync(Context.RequestAborted);
  var langs = supportedLanguages.ToDictionary(
    l => l.LanguageIso,
    l => l.Name ?? l.NameEnglish ?? "Unknown",
    StringComparer.OrdinalIgnoreCase);

  var flags = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
  {
    ["en"] = "us",
    ["fr"] = "fr",
    ["ru"] = "ru",
    ["uk"] = "ua",
    ["es"] = "es",
    ["he"] = "il",
    ["pt"] = "pt",
    ["th"] = "th",
    ["vi"] = "vn",
    ["fil"] = "ph",
    ["it"] = "it",
    ["pl"] = "pl",
    ["zh"] = "cn"
  };

  var request = Context.Request;
  var pathAndQuery = request.Path + request.QueryString;
  var curl = regLanguagePrefixBks.Replace(pathAndQuery, "");
  curl = regLanguagePrefix.Replace(curl, "");

  var langIso = Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName;
  var langPrefix = langIso == "en" ? "" : $"/{langIso}";
  var rtlLanguages = new HashSet<string>(StringComparer.OrdinalIgnoreCase) { "ar", "he", "fa", "ur" };
  var isRtl = rtlLanguages.Contains(langIso);
  var mobileNavSideClass = isRtl
    ? "right-0 translate-x-full peer-checked:translate-x-0"
    : "left-0 -translate-x-full peer-checked:translate-x-0";

  var isOpenedMenu = Context.Request.Cookies.TryGetValue("slidable-menu-opened", out var isOpened) &&
  isOpened.Equals("1");

  var isAuthorized = Context.User.Identity?.IsAuthenticated ?? false;

  var user = isAuthorized ? Context.User.ToUserApiAccess() : null;
  var currency = WebStorageUtility.GetUserCurrencyDetails();
  var grouped = await gameCategoriesService.GetGroupedCategoriesAsync(langIso);
  var bal = WebStorageUtility.GetUserBalance(Context);
  if (bal != null && isAuthorized)
  {
    bal = await PaymentHelper.GetUserBalance(user, true);
  }

  // Bonus balance logic with caching
  decimal bonusBalance = 0;
  if (isAuthorized && user != null)
  {
    var cachedBonus = WebStorageUtility.GetUserBonusBalance(Context);
    if (cachedBonus.HasValue)
    {
      bonusBalance = cachedBonus.Value;
    }
    else
    {
      var bonusResult = await playerClub365ApiService.EntityBonusesGetAsync(user);
      if (bonusResult.IsSuccess)
      {
        bonusBalance = bonusResult.Value.BonusBalance;
        PaymentHelper.CacheUserBonusBalance(Context, bonusBalance);
      }
    }
  }
  var totalBalance = (bal?.BalanceUSD ?? 0) + bonusBalance;

  var order = new[] { 1, 0, 2 };
  var orderedGroups = grouped
  .OrderBy(g => Array.IndexOf(order, g.Key))
  .ToList();

  var searchEndpoint = string.IsNullOrWhiteSpace(langIso)
  ? "/api/games/search"
  : $"{langPrefix}/api/games/search";

  var unableText = @_helper.GetDictionaryValueOrDefault("No results", "No results");
  var a = 1;
}

